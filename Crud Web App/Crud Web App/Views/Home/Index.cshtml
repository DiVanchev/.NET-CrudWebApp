@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-primary">Welcome to TradeZone</h1>
        <p class="lead text-secondary">Your online marketplace to buy, sell, and exchange anything you no longer need.</p>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-4">
            <img src="~/Images/Main/sellitems.png" alt="Sell Items" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
            <h3 class="mt-3 text-info">Sell Your Items</h3>
            <p>Have something you no longer need? Turn it into cash by listing it on our platform.</p>
        </div>
        <div class="col-md-4">
            <img src="~/Images/Main/buyitems.png" alt="Buy Items" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
            <h3 class="mt-3 text-info">Find Great Deals</h3>
            <p>Explore a wide range of items at great prices. Find hidden gems just around the corner.</p>
        </div>
        <div class="col-md-4">
            <img src="~/Images/Main/exchangeitems.png" alt="Exchange Items" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
            <h3 class="mt-3 text-info">Exchange with Others</h3>
            <p>Trade your items with others in your community. Make deals that benefit everyone.</p>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="Identity/Account/Register" class="btn btn-primary btn-lg">Join Now</a>
        <a href="Listings" class="btn btn-secondary btn-lg">Start Selling</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h3 {
        color: #17a2b8;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
