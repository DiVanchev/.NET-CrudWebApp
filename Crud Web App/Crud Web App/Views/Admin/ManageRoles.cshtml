@model IEnumerable<IdentityRole>
@using Microsoft.AspNetCore.Identity


<h2>Manage Roles</h2>

<form asp-action="CreateRole" method="post">
    <input type="text" name="roleName" placeholder="New Role Name" class="form-control" />
    <button type="submit" class="btn btn-primary">Create Role</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="DeleteRole" asp-route-roleId="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
