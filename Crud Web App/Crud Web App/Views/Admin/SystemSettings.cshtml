@model Crud_Web_App.Models.SystemSettings

<h2>System Settings</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<form asp-action="SystemSettings" method="post">
    <div class="form-group">
        <label asp-for="SiteTitle" class="control-label">Site Title</label>
        <input asp-for="SiteTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SiteDescription" class="control-label">Site Description</label>
        <textarea asp-for="SiteDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ContactEmail" class="control-label">Contact Email</label>
        <input asp-for="ContactEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AllowUserRegistration" class="control-label">Allow User Registration</label>
        <input asp-for="AllowUserRegistration" class="form-control" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="MaxUploadFileSize" class="control-label">Max Upload File Size (KB)</label>
        <input asp-for="MaxUploadFileSize" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>
