@{
    ViewData["Title"] = "Admin Panel";
}

<div class="admin-panel">
    <h2 class="admin-title">Welcome to the Admin Panel</h2>
    <p class="admin-description">This page is accessible only to users with the Admin role.</p>

    <ul class="admin-nav">
        <li><a asp-action="ManageUsers" class="admin-link">Manage Users</a></li>
        <li><a asp-action="ManageListings" class="admin-link">Manage Listings</a></li>
        <li><a asp-action="ManageRoles" class="admin-link">Manage Roles</a></li>
        <li><a asp-action="SystemSettings" class="admin-link">System Settings</a></li>
    </ul>
</div>

<style>
    .admin-panel h2.admin-title {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .admin-panel p.admin-description {
        font-size: 1.2rem;
        color: #666;
        text-align: center;
        margin-bottom: 2rem;
    }

    .admin-panel ul.admin-nav {
        list-style: none;
        padding: 0;
        text-align: center;
    }

        .admin-panel ul.admin-nav li {
            display: inline-block;
            margin: 0 1rem;
        }

            .admin-panel ul.admin-nav li a.admin-link {
                font-size: 1.2rem;
                color: #ffffff;
                background-color: #007bff;
                padding: 0.75rem 1.5rem;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .admin-panel ul.admin-nav li a.admin-link:hover {
                    background-color: #0056b3;
                }

                .admin-panel ul.admin-nav li a.admin-link:active {
                    background-color: #003d7a;
                }
</style>
